generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Maps {
  id           Int     @id @default(autoincrement())
  name         String
  charactersId Int[]
  Users        Users[]
}

model Users {
  id       Int      @id @default(autoincrement())
  username String
  time     Int
  CreateAt DateTime @default(now())
  Maps     Maps     @relation(fields: [mapsId], references: [id], onDelete: Cascade)
  mapsId   Int
}
